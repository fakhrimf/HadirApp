<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimens_200dp"
    android:layout_height="180dp"
    android:background="#1A1F1F1F"
    android:padding="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_siswa"
        android:layout_width="@dimen/dimens_80dp"
        android:layout_height="@dimen/dimens_80dp"
        android:src="@drawable/fakhri"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/nama_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_about_us"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/logo_siswa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/email_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_about_us"
        android:textColor="#ffff"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/dimens_12dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/nama_siswa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>