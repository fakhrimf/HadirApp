<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.statistics.StatisticsFragment">

        <ImageView
            android:id="@+id/Logo_Statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_app_white"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/team_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_team"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#ffff"
            android:textSize="@dimen/size_20sp"
            app:layout_constraintTop_toBottomOf="@id/Logo_Statistics"
            app:layout_constraintEnd_toEndOf="@id/Logo_Statistics"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_siswa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/team_statistics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

